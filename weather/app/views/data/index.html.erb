<h1> Readings for PostCode and Date </h1>

<table class="table">

<% @locations.order(:postcode_id).each do |location| %>
<tr>
    <th>Id</th>
    <th>Latitute</th>
    <th>Longitute</th>
    <th>LastUpdate</th>
 </tr>

  <tbody>
      <tr>
        <td><%= location.loc_id %></td>
        <td><%= location.lat %></td>
        <td><%= location.lon %></td>
        <td><%= location.updated_at %></td>
      </tr>
    </tbody>

 <tr>
    <th>Time</th>
    <th>Temperature</th>
    <th>RainFall</th>
    <th>WindDirection</th>
    <th>WindSpeed</th>
  </tr>
  <% @measurements.order(:timestamp).each do |measurement| %>
    <tbody>
      <tr>
        <td><%= measurement.timestamp.localtime %></td>
        <td><%= measurement.temperature.temp %></td>
        <td><%= measurement.rainfall.precip.round(2) %></td>
        <td><%= measurement.wind_direction.bearing %></td>
        <td><%= measurement.wind_speed.speed %></td>
      </tr>
    </tbody>
  <% end %>
  <% end %>
</table>
